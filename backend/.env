# TaskFlow API Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development
HOST=localhost

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=combined
LOG_FILE=logs/access.log

# Database Configuration - Local MongoDB (for development)
MONGODB_URI=mongodb://localhost:27017/taskflow
DB_TYPE=mongodb
DB_HOST=localhost
DB_PORT=27017
DB_NAME=taskflow
DB_USER=
DB_PASSWORD=

# MongoDB Connection Options
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_SOCKET_TIMEOUT_MS=30000
DB_SERVER_SELECTION_TIMEOUT_MS=5000

# Cache Configuration (for future use)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# File Upload Configuration (for future use)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,txt

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Production Settings
TRUST_PROXY=false
COMPRESSION_THRESHOLD=1024
HELMET_CONTENT_SECURITY_POLICY=true

# Development Settings
DEBUG_MODE=true
PRETTY_PRINT_JSON=true
DETAILED_ERRORS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/docs
