{
  "name": "taskflow-api",
  "version": "1.0.0",
  "description": "RESTful backend API for TaskFlow Lite - A secure Node.js/Express server with comprehensive middleware and testing",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "build": "echo 'No build step required for Node.js'",
    "postman": "newman run tests/TaskFlow-API.postman_collection.json",
    "load-test": "artillery quick --count 50 -n 20 http://localhost:5000/api/tasks",
    "docs": "node scripts/generate-docs.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "rest",
    "task-management",
    "backend",
    "server",
    "middleware",
    "cors",
    "security"
  ],
  "author": {
    "name": "TaskFlow Development Team",
    "email": "dev@taskflow.com"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "zod": "^3.22.2",
    "uuid": "^9.0.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "newman": "^5.3.2",
    "artillery": "^2.0.0",
    "@types/jest": "^29.5.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taskflow/taskflow-api.git"
  },
  "bugs": {
    "url": "https://github.com/taskflow/taskflow-api/issues"
  },
  "homepage": "https://github.com/taskflow/taskflow-api#readme"
}
